<div class="panel post">
  <div class="col-md-6 text-left">
    <em>
      <code>
        <%= "#{full_name(@user)} on #{my_date_format(@post.created_at)}" %>
      </code>
    </em>
  </div>
  <div class="col-md-6 text-right">
    <% if @post.created_at.to_i != @post.updated_at.to_i %>
      <em>
        <code>
          Updated: <%= @post.updated_at.strftime("%d %B %Y at %H:%M") %>
        </code>
      </em>
    <% end %>
  </div>
  <div class="col-md-12">
    <h1>
      <%= @post.title %>
    </h1>
    <div class="lead">
      <p>
        <%= @post.text %>
      </p>
    </div>
  </div>
  <div class="btn-group">
    <% if can? :update, @post %>
      <%= link_to "📝 #{t('.edit')}", edit_post_path(@post), class: 'btn btn-sm btn-success'%>
    <% end %>
    <% if can? :destroy, @post %>
      <%= link_to "❌ #{t('.destroy')}",
                  post_path(@post),
                  method: :delete, data: { confirm: t('.are_you_sure') },
                  class: 'btn btn-sm btn-danger' %>
    <% end %>
  </div>
</div>


<div class="comment">
<h3>
 Comments
</h3>
<% @comments.each do |c| %>
  <hr>
  <p>
    <em>
      <%= "#{full_name(c.user)} on #{my_date_format(c.created_at)} wrote:" %>
    </em>
  </p>
  <p>
    <%= c.body %>
  </p>
  <% if can? :destroy, c %>
    <p>
      <%= link_to '❌ Destroy Comment', [c.post, c],
                   method: :delete,
                   data: { confirm: 'Are you sure you want to delete this comment?'},
                   class: 'btn btn-sm btn-danger'%>
    </p>
  <% end %>
<% end %>

<% if can? :create, Comment %>
<h3>
 Add a comment:
</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>

  <%= "Comment as #{current_user.first_name} #{current_user.last_name}\:" %>
  <p>
    <%= f.text_area :body, :required => true %>
  </p>
  <p>
    <%= f.submit :class=>'btn btn-lg btn-success'%>
  </p>
  <% end %>
 <% else %>
  <p>
    <%= link_to "Sign in to add a comment", new_user_session_path, class: 'btn btn-lg btn-primary'  %>
  </p>

<% end %>
<%= link_to "⬅️ #{I18n.t('posts.new.back')}", posts_path, class: 'btn btn-sm btn-warning' %>
</div>

