<% title = t('.post_title') %>
<% provide(:title, title) %>
<h1><%= title %></h1>

<div class="center">
  <%= link_to "ğŸ“ #{t('.new_post')}", new_post_path, class: 'btn btn-lg btn-success' %>
</div>

<% if @posts %>
  <% @posts.each do |post| %>
    <hr>
    <div class="post">
      <div>
      <div class="row">
        <div class="span6 text-left">
            <code><%= post.created_at.strftime("%d %B %Y") %></code>
        </div>
        <div class="span5 text-right">
          <% if post.created_at.to_i != post.updated_at.to_i %>
            <em><code>
              Updated at <%= post.updated_at.strftime("%d %B %Y") %>
            </code></em>
          <% end %>
        </div>
      </div>
      </div>
      <div class="row">
        <div class="span12">
            <h3>
              <%= post.title %>
            </h3>
        </div>
      </div>
        <div class="row">
          <div class="span12 lead">
          <%= post.text %>
          <br>
          </div>
        </div>
      <div class="row">
        <div class="span1">
        </div>
        <div class="btn-group">
          <% if can? :read, post %>
            <%= link_to "ğŸ” #{t('.show')}", post_path(post), class: 'btn btn-primary' %>
            <% end %>
          <% if can? :update, post %>
            <%= link_to "ğŸ“ #{t('.edit')}", edit_post_path(post), class: 'btn btn-success' %>
          <% end %>
          <% if can? :destroy, post %>
            <%= link_to "âŒ #{t('.destroy')}", post_path(post),
                            method: :delete,
                            data: { confirm: t('.are_you_sure') },
                            class: 'btn btn-danger' %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>


  <hr>
  <div class="center">
    <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
  </div>
<% end %>
