<header class="navbar navbar-fixed-top navbar-inverse" role="navigation">
  <div class="navbar-inner">
    <%= link_to '🌐 Blog', '/', id: 'logo' %>
    <nav>
      <ul class="navbar-nav pull-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to "👤 #{['Hello', current_user.first_name].compact.join(', ')}!",
                        edit_user_registration_path, style: 'color:#ccc' %>
          </li>
          <li>
            <%= link_to 'ℹ️ Help', static_pages_help_path %></li>
          <li>
            <%= link_to "⚙️ #{current_user.first_name} account",
                        edit_user_registration_path %>
          </li>
          <li>
            <%= link_to '🚪🚶 Sign out',
                destroy_user_session_path, method: :delete %>
          </li>
        <% else %>
          <li>
            <%= link_to 'ℹ️ Help', static_pages_help_path %></li>
          <li><%= link_to '📝 Sign up', new_user_registration_path %></li>
          <li><%= link_to '🚪 Sign in', new_user_session_path %></li>
        <% end %>
        <li>
          <%= link_to("⬇️ #{I18n.backend.translate(locale, 'language_name')}",
                      url_for(locale: locale),
                      class: 'dropdown-toggle',
                      data: { toggle: 'dropdown' }) %>
          <ul class="navbar-inverse dropdown-menu pull-right" role="menu">
            <% I18n.available_locales.each do |locale| %>
              <li>
                <%= link_to I18n.backend.translate(locale, 'language_name'),
                            url_for(locale: locale),
                            class: 'navbar-link' %></li>
            <% end %>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
